<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".finddoctorActivity">
    <TextView
        android:id="@+id/finddcotorhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:text="Find Doctor"

       >

    </TextView>

    <TextView
        android:id="@+id/topdcotorhead"
        android:layout_centerHorizontal="true"
        android:paddingTop="60dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Top Doctors"
        android:textStyle="bold"
        android:textColor="@color/teal_200"/>
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_below="@+id/topdcotorhead"
    android:rowCount="3"
    android:columnCount="2"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/familyphysician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/purple_700"
        app:cardElevation="20dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="18dp"
        android:layout_column="0"

        app:cardUseCompatPadding="true"
        android:layout_columnWeight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/family_physicians"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Family Physician"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dietician"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/purple_700"
        app:cardElevation="20dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="18dp"
        android:layout_column="1"
        app:cardUseCompatPadding="true"
        android:layout_columnWeight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/dietician"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Dietician"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dentist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/purple_700"
        app:cardElevation="20dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="18dp"
        android:layout_column="0"
        app:cardUseCompatPadding="true"
        android:layout_columnWeight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/dentist"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Dentist"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/surgeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/purple_700"
        app:cardElevation="20dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="18dp"
        android:layout_column="1"
        app:cardUseCompatPadding="true"
        android:layout_columnWeight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/surgeon"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Surgeon"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardiologist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/purple_700"
        app:cardElevation="20dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="18dp"
        android:layout_column="0"
        app:cardUseCompatPadding="true"
        android:layout_columnWeight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/cardiologists"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="Cardiologists"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/exitfinddoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_gravity="fill"
        app:cardBackgroundColor="@color/purple_700"
        app:cardElevation="20dp"
        android:layout_rowWeight="1"
        app:cardCornerRadius="18dp"
        android:layout_column="1"
        app:cardUseCompatPadding="true"
        android:layout_columnWeight="1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center"
            android:orientation="vertical"

            >
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/info"
                android:layout_height="70dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="BACK"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>
</RelativeLayout>