<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".labappointmentbookingActivity">

    <TextView
        android:id="@+id/alabappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:text="24*7 Healthcare"
        android:textAlignment="center"
        android:textColor="@color/purple_200"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/fullnamelabappointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/pincodelabappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_security_24"

        android:drawablePadding="10dp"
        android:ems="10"

        android:hint="Pincode"
        android:inputType="textEmailAddress"

        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/contactnumberlabappointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullnamelabappointment"
        app:layout_constraintVertical_bias="0.833" />

    <EditText
        android:id="@+id/addresslabappointment2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_security_24"

        android:drawablePadding="10dp"
        android:ems="10"

        android:hint="Address"
        android:inputType="textEmailAddress"

        android:padding="10dp"
        android:paddingBottom="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/contactnumberlabappointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullnamelabappointment"
        app:layout_constraintVertical_bias="0.208" />

    <EditText
        android:id="@+id/fullnamelabappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"

        android:ems="10"
        android:hint="Full name"

        android:inputType="textPersonName"
        android:padding="10dp"

        android:paddingBottom="10dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alabappointment" />

    <EditText
        android:id="@+id/contactnumberlabappointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bg"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Contact Number"
        android:inputType="text"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullnamelabappointment"
        app:layout_constraintVertical_bias="0.313" />

    <Button
        android:id="@+id/bookappointmentlabappointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="180dp"
        android:background="@drawable/input_bg"
        android:backgroundTint="@color/white"
        android:text="Book Appointment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactnumberlabappointment"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/titlebookappointmentlabappointment"
        android:layout_width="238dp"
        android:layout_height="61dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="20dp"
        android:text="Book Appointment"
        android:textAlignment="center"
        android:textColor="@color/teal_200"
        android:textSize="26dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/fullnamelabappointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alabappointment"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>